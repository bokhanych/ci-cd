pipeline {
    agent any

    environment {
        GIT_REPO = "https://github.com/bokhanych/spring-boot.git"
        APP_PATH = "spring-boot/SpringBootHelloWorld/pom.xml"
    }   

    stages {
        stage('Clone Git') {
            steps {
                git branch: 'main', url: ${GIT_REPO}
            }
        }
        stage ('ls -la'){
            steps {
                sh "ls -la"
            }
        }
        stage ('Deploy app'){
            steps {
                sh "mvn package -f ${APP_PATH}"
            }
        }

    }
}